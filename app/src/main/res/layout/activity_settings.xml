<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Base.Theme.PlaylistMaker"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings"
    android:background="?attr/colorPrimary">
    <Button
        style = "@style/top_button"

        app:iconGravity = "textStart"
        android:text="@string/settings"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="@dimen/avrg_text_size"
        app:icon = "@drawable/arrowback"
        app:iconPadding = "@dimen/low_margin"
        android:layout_marginBottom="20dp"
        android:id="@+id/home"
        />
        <Switch
            android:text="@string/dark_theme"
            style="@style/top_button"
            android:paddingRight="6dp"
            />
    <Button
        style="@style/top_button"
        android:text="@string/sharing"
        app:icon = "@drawable/share"
        android:id="@+id/buttonShare"/>
    <Button
       style="@style/top_button"
        android:text="@string/support"
        app:icon = "@drawable/group"
        android:id="@+id/support"/>
    <Button
        android:text="@string/user_agreement"
        app:icon = "@drawable/arrow"
        style="@style/top_button"
        android:id="@+id/userAgreement"/>

</LinearLayout>