<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="backgroundMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/black</item>
        <item name="android:theme">@style/Base.Theme.PlaylistMaker</item>
    </style>
    <style name="button_main_activity"
        parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent </item>
        <item name="android:layout_height">0dp </item>
        <item name="android:layout_marginHorizontal">@dimen/horizontal_margin </item>
        <item name="android:layout_marginTop">@dimen/low_margin </item>
        <item name="android:layout_weight">1 </item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white </item>
        <item name="android:textSize">@dimen/avrg_text_size </item>
        <item name="cornerRadius">@dimen/button_corner </item>
        <item name="iconGravity">textStart </item>
        <item name="iconPadding">@dimen/icon_pudding </item>
        <item name="iconTint">@color/black </item>
        <item name="android:fontFamily">@font/ys_display_medium </item>
        <item name="android:textAllCaps">false </item>
    </style>
    <style name="top_button"
        parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/padding_activity</item>
        <item name="android:textSize">@dimen/low_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">textStart</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">end</item>
        <item name="android:paddingRight">@dimen/icon_right_pudding</item>
        <item name="android:thumbTint">@color/blue</item>
        <item name="android:trackTint">@color/blue</item>
    </style>
    <style name="search">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/search_title</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@color/mist_gray</item>
        <item name="android:drawableStart">@drawable/light_mode</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">8dp</item>
          </style>

    <style
        name="cross_button"
        parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="icon">@drawable/x</item>
        <item name="iconSize">16dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:backgroundTint">@color/mist_gray</item>
        <item name="android:layout_margin">0dp</item>
    </style>
    <style name="track_text">
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="track_text_small"
        parent ="track_text">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="iconColor">
        <item name="tint">@color/white</item>
    </style>
</resources>